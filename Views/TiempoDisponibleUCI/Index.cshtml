}

<link href="~/Content/lib/bootstrap-table/editable.css" rel="stylesheet" />

<div class="row">
    <div class="col-lg-12">
        <div class="ibox-title bg-title">
            <h5>Tiempo disponible</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content tabs-container">

            <div class="table-responsive-md">
                <table style="display:none;" id="tbTiempoDisponible" class="table table-bordered table-striped table-sm" data-show-export="true" data-pagination="true" data-page-size="20" data-mobile-responsive="true"
                       data-show-refresh="false" data-show-toggle="true" data-show-columns="true" data-locale="es-MX" data-height="800px"
                       data-header-style="headerStyle" data-search="false" data-checkbox-header="false" data-select-item-name="id"
                       data-reorderable-columns="true">
                    <thead>
                        <tr>
                            <th data-visible="true" data-sortable="true" data-field="TiempoDisponible" data-align="left">Proceso</th>
                            <th data-visible="true" data-sortable="true" data-field="NomPeriodo" data-align="center">Periodo</th>
                            <th data-visible="true" data-sortable="true" data-field="Valor" data-align="center" data-editable="true">Objetivo</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>



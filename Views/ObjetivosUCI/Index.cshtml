@{
    ViewBag.ActivePage = 1;
    ViewBag.ActiveMenu = 2;
    ViewBag.Title = "Objetivos de Utilización de capacidad instalada";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox-title bg-title">
            <h5>Filtros</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content tabs-container">

            <div class="table-responsive-md">
                <table style="display:none;" id="tbObjetivos" class="table table-bordered table-striped table-sm" data-show-export="true" data-pagination="true" data-page-size="20" data-mobile-responsive="true"
                        data-show-refresh="false" data-show-toggle="true" data-show-columns="true" data-locale="es-MX" data-height="800px"
                        data-header-style="headerStyle" data-search="false" data-checkbox-header="false" data-select-item-name="id"
                        data-reorderable-columns="true">
                    <thead>
                        <tr>
                            <th data-visible="true" data-sortable="true" data-field="Indicador" data-align="left">Indicador</th>
                            <th data-visible="true" data-sortable="true" data-field="Periodo_2019" data-align="center" data-formatter="decimalFormatter">2019</th>
                            <th data-visible="true" data-sortable="true" data-field="Periodo_2021" data-align="center" data-formatter="decimalFormatter">2021</th>
                            <th data-visible="true" data-sortable="true" data-field="Periodo_2022" data-align="center" data-formatter="decimalFormatter">2022</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>


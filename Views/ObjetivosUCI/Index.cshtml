<script src="~/Scripts/lib/bootstrap-table/extensions/toolbar/bootstrap-table-toolbar.min.js"></script>
<script src="~/Scripts/lib/bootstrap-table/extensions/reorder-columns/bootstrap-table-reorder-columns.min.js"></script>

